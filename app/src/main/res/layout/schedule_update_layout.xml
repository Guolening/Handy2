<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/scheduleupdate">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.12" />

    <TextView
        android:id="@+id/schedule_update_txtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="修改课表"
        android:textSize="30dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/schedule_update_txtv_week"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="星期：" />

        <Spinner
            android:id="@+id/schedule_update_spn_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/empty_spn_week_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.04"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/schedule_update_txtv_jieci"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="节次："
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/schedule_update_spn_jieci_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/empty_spn_jieci_content_xiangxi" />

            <Spinner
                android:id="@+id/schedule_update_spn_jieci_end"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:entries="@array/empty_spn_jieci_content_xiangxi"
                android:layout_weight="2" />

        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/schedule_update_txtv_build"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="0.1"
            android:text="教学楼：" />

        <EditText
            android:id="@+id/schedule_update_edt_build"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3.0" />

        <TextView
            android:id="@+id/schedule_update_txtv_room"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="0.1"
            android:text="教室：" />

        <EditText
            android:id="@+id/schedule_update_edt_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3.0" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/schedule_update_txtv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="课程名称："
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/schedule_update_edt_name"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.03" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.22" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="23dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/schedule_update_btn_save"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="保存" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="37dp" />

            <Button
                android:id="@+id/schedule_update_btn_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="返回" />
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.22" />
</LinearLayout>