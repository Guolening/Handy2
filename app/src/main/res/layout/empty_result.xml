<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/result">
    <!--android:gravity="center_horizontal"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/empty_result_no"
            android:text="编号"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/empty_result_build"
            android:text="教学楼"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/empty_result_room"
            android:text="教室"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/empty_result_week"
            android:text="星期"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/empty_result_jieci"
            android:text="节次"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/empty_result_nsit"
            android:text="座位数"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/empty_result_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>