<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/course">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.12" />

    <TextView
        android:id="@+id/course_txtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="课程查询"
        android:textSize="30dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/course_txtv_week"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="星期："
            android:layout_weight="1"/>

        <Spinner
            android:id="@+id/course_spn_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/empty_spn_week_content" />

        <TextView
            android:id="@+id/course_txtv_jieci"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.32"
            android:text="节次：" />

        <Spinner
            android:id="@+id/course_spn_jieci"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:entries="@array/empty_spn_jieci_content" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/course_txtv_build"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.19"
            android:text="教学楼：" />

        <Spinner
            android:id="@+id/course_spn_build"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/course_spn_build_content" />

        <TextView
            android:id="@+id/course_txtv_room"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.36"
            android:text="教室：" />

        <Spinner
            android:id="@+id/course_spn_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/course_txtv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:text="课程名称：" />

        <Spinner
            android:id="@+id/course_spn_name"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:entries="@array/course_spn_name_content" />

        <TextView
            android:id="@+id/course_txtv_teacher"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="教师姓名：" />

        <Spinner
            android:id="@+id/course_spn_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.09" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <Button
            android:id="@+id/course_btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.67"
            android:text="查询" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="0.38"/>

        <Button
            android:id="@+id/course_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:text="返回" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2" />
    </LinearLayout>

</LinearLayout>